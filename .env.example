# VeloReady Environment Variables
# Copy this to .env and fill in your actual values

# OpenAI API Key (for AI Brief and Ride Summary)
OPENAI_API_KEY=sk-proj-your-key-here

# Strava API Credentials  
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# Intervals.icu API Credentials
INTERVALS_CLIENT_ID=your_intervals_client_id
INTERVALS_CLIENT_SECRET=your_intervals_client_secret

# HMAC Secret (for signature verification)
HMAC_SECRET=your_random_secret_here

# Redis/Upstash (for caching and rate limiting)
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Database (if using)
DATABASE_URL=your_database_url
